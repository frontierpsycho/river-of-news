<%= content_tag :div, class: :item do %>
  <%= link_to item.url, target: :_blank do %><%= image_tag item.image_thumbnail_medium %><% end %>
  <%= content_tag :div, class: :text do %>
    <%= link_to item.url, target: :_blank do %><%= content_tag :h3, item.header %><% end %>
    <%= content_tag :span, class: :"below-header" do %>
      <%= item.type_of_media.capitalize %> &sdot; <%= display_published_at(item.published_at) %>
    <% end %>
    <%= content_tag :p, raw(item.summary) %>
  <% end %>
<% end %>
